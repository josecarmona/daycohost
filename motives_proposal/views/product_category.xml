<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <record id="motives_proposal_list" model="ir.ui.view">
      <field name="name">school_school.list</field>
      <field name="model">motives.proposal</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="type_motive"/>
        </tree>
      </field>
    </record>

    <record id="school_school_form" model="ir.ui.view">
      <field name="name">school_school.form</field>
      <field name="model">school.school</field>
      <field name="arch" type="xml">
            <form string="School Information">
                <sheet>
                    <group>
                        <div class="o_address_format">
                            <field name="name"  />
                            <field name="type_motive" />
                        </div>
                    </group>

                </sheet>
            </form>
      </field>
    </record>   

    </data>
</odoo>
