        <field name= "model">crm.lead</field>
        <field name= "inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="groups_id" eval="[(4,ref('hide_buttons_opportunity.group_hide_create_and_edit_button_opportunity'))]"/>
