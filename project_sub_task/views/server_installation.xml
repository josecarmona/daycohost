<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_project_sub_task_install_server" model="ir.ui.view">
            <field name="name">view.project.sub.task.install.server</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">


                <!--Task / SubTask-->
                <xpath expr="//page[@name='extra_info']" position="after">
                    <!--Server Installation-->
                    <page name="server_installation" string="Instalación Servidor" attrs="{'invisible':[('service_type', 'not in', 'instalar_servidor')]}">
                        <!--Hostname-->
                        <group name="ins_hostname_group" style="width:50%;">
                            <field name="hostname" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                        </group>

                        <div style="width:100%;">
                            <group name="group_top">
                                <group name="group_left" style="width:50%;">
                                    <div>
                                        <!--Server Resources-->
                                        <group name="server_resources_group" string="Recursos del Servidor">
                                            <field name="server_ram" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="server_cpu" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="server_storage" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                        </group>
                                        <!--Operating System-->
                                        <group name="operating_system_group" string="Sistema Operativo">
                                            <field name="operative_system" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="operating_system_arch" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="lang_operating_system" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="server_on_internet" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="server_function" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="server_impact" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="mission_critical" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="server_role" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="service_classification" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="req_internet_access" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="additional_conf" />
                                            <field name="num_inc_out_ports" />
                                            <field name="add_requirement" />
                                            <field name="description_monitoring_system" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="virtual_platform" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                        </group>
                                    </div>
                                </group>
                                <group name="group_rigth" style="width:50%;">
                                    <div>
                                        <!--Disk Characteristics-->
                                        <group name="disk_characteristics_group" string="Características del Disco">
                                            <field name="size_operating_system_level" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="size_hypervisor_level" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="disk_type" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                            <field name="virtual_disk_extension" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                        </group>
                                        <!--Installation Characteristics-->
                                        <group name="installation_characteristics_group" string="Características de la Instalación">
                                            <field name="partitions_name_size" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                                        </group>
                                    </div>
                                </group>
                            </group>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
