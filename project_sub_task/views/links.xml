<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_project_sub_task_links" model="ir.ui.view">
            <field name="name">view.project.sub.task.links</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <!--Task / SubTask-->
                <xpath expr="//page[@name='extra_info']" position="after">
                    <!--links-->
                    <page name="links" string="Enlaces" attrs="{'invisible':[('service_type', 'not in', 'enlaces')]}">

                        <div style="width:100%;">
                            <group name="group_top">

                                <group name="group_left" style="width:50%;">
                                    <div>
                                        <group name="links_group">
                                            <field name="link_location" attrs="{'required':[('service_type', 'in', 'enlaces')]}" />
                                            <field name="link_destination" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                                            <field name="link_dayco_cloud" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                                            <field name="link_dci" />
                                            <field name="link_bandwidth" />
                                            <!-- <field name="link_location" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                                            <field name="link_destination" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                                            <field name="link_dayco_cloud" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                                            <field name="link_dci" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                                            <field name="link_bandwidth" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/> -->
                                        </group>
                                    </div>
                                </group>

                                <group name="group_rigth">
                                </group>

                            </group>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
