            </group>
          </page>

          <!--Placement-->
          <page name="placement" string="Colocación" attrs="{'invisible':[('service_type', 'not in', 'colocacion')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
              </group>

            </group>
          </page>

          <!--Cabling utp-->
          <page name="cabling_utp" string="Cableado UTP" attrs="{'invisible':[('service_type', 'not in', 'cableado_utp')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
              </group>

            </group>
          </page>

          <!--Cabling fo-->
          <page name="cabling_fo" string="Cableado FO" attrs="{'invisible':[('service_type', 'not in', 'cableado_fo')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
              </group>

            </group>
          </page>

          <!--Coaxial wiring-->
          <page name="coaxial_wiring" string="Cableado CO" attrs="{'invisible':[('service_type', 'not in', 'cableado_coaxial')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
              </group>

            </group>
          </page>

          <!--Additional resources-->
          <page name="additional_resources" string="Recursos Adicionales" attrs="{'invisible':[('service_type', 'not in', 'recursos_adicionales')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
              </group>

            </group>
          </page>

          <!--Production pass-->
          <page name="production_pass" string="Pase a Producción" attrs="{'invisible':[('service_type', 'not in', 'pase_produccion')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
              </group>

            </group>
          </page>

        </xpath>

      </field>
    </record>

  </data>
</odoo>