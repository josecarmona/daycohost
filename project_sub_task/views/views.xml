<odoo>
  <data>

    <record model="ir.ui.view" id="project_sub_task.form">
      <field name="name">project_sub_task form</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_form2" />
      <field name="arch" type="xml">

        <xpath expr="//field[@name='user_id']" position="after">
          <field name="edt" />
          <field name="service_type" />
          <field name="percentage_progress" string="% de Avance"/>
        </xpath>

        <!--Task / SubTask-->
        <xpath expr="//page[@name='extra_info']" position="after">

          <!--Server Installation-->
          <page name="server_installation" string="Instalación Servidor" attrs="{'invisible':[('service_type', 'not in', 'instalar_servidor')]}">
            <!--Hostname-->
            <div style="width:100%;">
              <group name="ins_hostname_group" style="width:50%;">
                <field name="hostname" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
              </group>
            </div>
            <div style="width:100%;">
              <group name="group_top">

                <group name="group_left" style="width:50%;">
                  <div>

                    <!--Server Resources-->
                    <group name="server_resources_group" string="Recursos del Servidor">
                      <field name="server_ram" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="server_cpu" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="server_storage" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                    </group>

                    <!--Operating System-->
                    <group name="operating_system_group" string="Sistema Operativo">
                      <field name="operative_system" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="operating_system_arch" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="lang_operating_system" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="server_on_internet" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="server_function" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="server_impact" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="mission_critical" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="server_role" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="service_classification" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="req_internet_access" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="additional_conf" />
                      <field name="num_inc_out_ports" />
                      <field name="add_requirement" />
                      <field name="description_monitoring_system" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="virtual_platform" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                    </group>
                  </div>
                </group>

                <group name="group_rigth" style="width:50%;">

                  <div>
                    <!--Disk Characteristics-->
                    <group name="disk_characteristics_group" string="Características del Disco">
                      <field name="size_operating_system_level" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="size_hypervisor_level" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="disk_type" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                      <field name="virtual_disk_extension" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                    </group>
                    <!--Installation Characteristics-->
                    <group name="installation_characteristics_group" string="Características de la Instalación">
                      <field name="partitions_name_size" attrs="{'required':[('service_type', 'in', 'instalar_servidor')]}" />
                    </group>
                  </div>

                </group>

              </group>
            </div>

          </page>

          <!--Page: Clone Server-->
          <page name="clone_server" string="Clonación Servidor" attrs="{'invisible':[('service_type', 'not in', 'clonar_servidor')]}">
            <div style="width:100%;">
              <group name="clo_hostname_group" style="width:50%;">
                <field name="clo_hostname" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
              </group>
            </div>
            <div style="width:100%;">
              <group name="group_top">

                <group name="group_left" style="width:50%;">
                  <div>

                    <!--Server Resources-->
                    <group name="server_resources_group" string="Recursos del Servidor">
                      <field name="clo_server_ram" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_server_cpu" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_server_storage" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                    </group>

                    <!--Operating System-->
                    <group name="operating_system_group" string="Sistema Operativo">
                      <field name="clo_operative_system" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_operating_system_arch" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_lang_operating_system" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_server_on_internet" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_server_function" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_server_impact" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_mission_critical" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_server_role" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_service_classification" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_req_internet_access" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="hypervisor_virtual_server_comes" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="vm_version_in_vmware" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_additional_conf" />
                      <field name="clo_num_inc_out_ports" />
                      <field name="clo_add_requirement" />
                      <field name="clo_description_monitoring_system" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_virtual_platform" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                    </group>
                  </div>
                </group>

                <group name="group_rigth" style="width:50%;">

                  <div>
                    <!--Disk Characteristics-->
                    <group name="disk_characteristics_group" string="Características del Disco">
                      <field name="clo_size_operating_system_level" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_size_hypervisor_level" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_disk_type" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                      <field name="clo_virtual_disk_extension" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                    </group>
                    <!--Installation Characteristics-->
                    <group name="installation_characteristics_group" string="Características de la Instalación">
                      <field name="clo_partitions_name_size" attrs="{'required':[('service_type', 'in', 'clonar_servidor')]}"/>
                    </group>
                  </div>

                </group>

              </group>
            </div>

          </page>

          <!--Expansion decrease of processing storage capacities-->
          <page name="expansion_decrease_of_processing_storage_capacities" string="Ampliación/Disminución de Capacidades de Procesamiento/Almacenamiento" attrs="{'invisible':[('service_type', 'not in', 'ampliacion_disminucion_servicio')]}">
            <div style="width:100%;">
              <group name="amp_hostname_group" style="width:50%;">
                <field name="amp_hostname" attrs="{'required':[('service_type', 'in', 'ampliacion_disminucion_servicio')]}"/>
              </group>
            </div>

            <div style="width:100%;">
              <group name="group_top">

                <group name="group_left" style="width:50%;">
                  <div>
                    <!--Server Resources-->
                    <group name="server_resources_group" string="Recursos del Servidor">
                      <field name="amp_server_ram"/>
                      <field name="amp_server_cpu"/>
                      <field name="amp_server_storage"/>
                      <!-- <field name="amp_server_ram" attrs="{'required':[('service_type', 'in', 'ampliacion_disminucion_servicio')]}"/>
                      <field name="amp_server_cpu" attrs="{'required':[('service_type', 'in', 'ampliacion_disminucion_servicio')]}"/>
                      <field name="amp_server_storage" attrs="{'required':[('service_type', 'in', 'ampliacion_disminucion_servicio')]}"/> -->
                    </group>

                    <!--IP Addres-->
                    <group name="amp_ip_addres_group">
                      <field name="amp_ip_addres" attrs="{'required':[('service_type', 'in', 'ampliacion_disminucion_servicio')]}"/>
                    </group>
                  </div>
                </group>

                <group name="group_rigth">
                </group>

              </group>
            </div>
          </page>

          <!--links-->
          <page name="links" string="Enlaces" attrs="{'invisible':[('service_type', 'not in', 'enlaces')]}">

            <div style="width:100%;">
              <group name="group_top">

                <group name="group_left" style="width:50%;">
                  <div>
                    <group name="links_group">
                      <field name="link_location" />
                      <field name="link_destination" />
                      <field name="link_dayco_cloud" />
                      <field name="link_dci" />
                      <field name="link_bandwidth" />
                      <!-- <field name="link_location" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                      <field name="link_destination" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                      <field name="link_dayco_cloud" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                      <field name="link_dci" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/>
                      <field name="link_bandwidth" attrs="{'required':[('service_type', 'in', 'enlaces')]}"/> -->
                    </group>
                  </div>
                </group>

                <group name="group_rigth">
                </group>

              </group>
            </div>
          </page>

          <!--Internet service-->
          <page name="internet_service" string="Internet" attrs="{'invisible':[('service_type', 'not in', 'servicio_internet')]}">
            <group name="group_top">
              <group name="group_left">
                <!-- <field name="ubicacion" />
                <field name="destino" attrs="{'required':[('service_type', 'in', 'servicio_internet')]}"/>
                <field name="seguridad" />
                <field name="direcciones_publicas" />
                <field name="nube_daycohost" />
                <field name="ancho_de_banda" /> -->
              </group>
              <!-- <group name="group_rigth">
              </group> -->
            </group>
          </page>

          <!--Internet service-->
          <page name="security_service" string="Servicio de Seguridad" attrs="{'invisible':[('service_type', 'not in', 'servicio_seguridad')]}">

            <group name="group_top">

              <group name="group_left">
              </group>

              <group name="group_rigth">
